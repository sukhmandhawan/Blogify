<div class="flex flex-row items-center p-2 justify-between w-full fixed bg-white shadow-lg shadow-indigo-500/40" data-controller="menu">
  <div class="flex flex-row justify-between items-center w-full">
    <div class="flex flex-row items-center">
      <%= image_tag "avatars/17.png", alt: "App logo", width: 100, height: 100 %>
      <h1 class="font-bold text-xl ml-7">Bloguers</h1>
    </div>
    <div class="hidden lg:block flex justify-self-end">
    <%= link_to destroy_user_session_path, method: :delete do %>
      <h2 class="font-bold text-xl">Sign Out</h2>
      <%= image_tag "icons/out", alt: "Login Out", width: 60, height: 60 %>
      <% end %>
    </div>
  </div>

  <div>
  <button class="lg:hidden" data-action="click->menu#open" ><%= image_tag "icons/menu.svg", alt: "Menu icon", width: 45, height: 45 %></button>
  </div>

  <div class="bg-slate-200 fixed top-0 right-0 h-full shadow-lg shadow-indigo-500/40 flex flex-col min-w-[55%] overflow-y-scroll easy-in-out duration-200 p-5 translate-x-full" data-menu-target="item">
    <button class="close-menu" data-action="click->menu#close"><%= image_tag "icons/close.svg", alt: "Menu icon", width: 45, height: 45 %></button>
    <div class="m-auto">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <h2 class="font-bold text-xl">Sign Out</h2>
        <%= image_tag "icons/out", alt: "Login Out", width: 40, height: 40 %>
      <% end %>
    </div>

  </div>
</div>